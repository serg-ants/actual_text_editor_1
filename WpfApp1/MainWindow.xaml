<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="854.091"
    Height="720.545"
    mc:Ignorable="d">

    <Window.Resources>
        <local:DivideConverter x:Key = "DivideConverter"/>
        <local:MultiplyConverter x:Key = "MultiplyConverter"/>


    </Window.Resources>


    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button>
                <Label Background="Red">Red 2</Label>
            </Button>
            <Button>
                <Label Background="LightGreen">Green 2</Label>
            </Button>
            <Button>
                <Label Background="LightBlue">Blue 2</Label>
            </Button>
            <Button>
                <Label Background="Yellow">Yellow 2</Label>
            </Button>
            <Button>
                <Label Background="Orange">Orange 2</Label>
            </Button>
        </StackPanel>
        <Label DockPanel.Dock="Right"  Background="Orange">Orange 2</Label>
       
    </DockPanel>

   



</Window>
